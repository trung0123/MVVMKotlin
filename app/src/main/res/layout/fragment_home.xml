<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.askbekotlin.ui.home.HomeViewModel" />

        <variable
            name="cateId"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.HomeFragment">

        <com.nshmura.recyclertablayout.RecyclerTabLayout
            android:id="@+id/recycler_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            app:rtl_tabIndicatorColor="#53B8EE"
            app:rtl_tabSelectedTextColor="#53B8EE" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    app:categories="@{viewModel.mCategories}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_pager" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_home_next_lesson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textView"
                    app:visibilityNextLesson="@{viewModel.mNextLesson}">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="次の予約済みのレッスン"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintBottom_toBottomOf="@id/btn_home_confirmation_book"
                        app:layout_constraintEnd_toStartOf="@id/btn_home_confirmation_book"
                        app:layout_constraintStart_toStartOf="@id/ll_home_next_lesson"
                        app:layout_constraintTop_toTopOf="@id/ll_home_next_lesson" />

                    <Button
                        android:id="@+id/btn_home_confirmation_book"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@color/blue_logo"
                        android:text="予約確認"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="@id/ll_home_next_lesson"
                        app:layout_constraintTop_toTopOf="@id/ll_home_next_lesson" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        app:layout_constraintTop_toBottomOf="@id/btn_home_confirmation_book" />

                    <TextView
                        android:id="@+id/tv_home_datetime_next_lesson"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="#f47e2c"
                        android:textSize="@dimen/_10ssp"
                        app:dateTimeNextLesson="@{viewModel.mNextLesson}"
                        app:layout_constraintBottom_toBottomOf="@id/constraintLayout"
                        app:layout_constraintEnd_toStartOf="@id/constraintLayout"
                        app:layout_constraintStart_toStartOf="@id/ll_home_next_lesson"
                        app:layout_constraintTop_toBottomOf="@id/textView2"
                        tools:text="2017年12月20日(土)  09:30 ~ 10:30" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/ll_home_next_lesson"
                        app:layout_constraintTop_toBottomOf="@id/textView2">

                        <com.willy.ratingbar.BaseRatingBar
                            android:id="@+id/img_home_score_star"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_home_score_next_lesson"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="@id/constraintLayout"
                            app:srb_isIndicator="true"
                            app:srb_numStars="5"
                            app:srb_starHeight="@dimen/_9sdp"
                            app:srb_starPadding="@dimen/_1sdp"
                            app:srb_starWidth="@dimen/_9sdp"
                            app:srb_stepSize="0.5" />

                        <TextView
                            android:id="@+id/tv_home_score_next_lesson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8ssp"
                            app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                            app:layout_constraintStart_toEndOf="@id/img_home_score_star"
                            app:layout_constraintTop_toTopOf="@id/constraintLayout"
                            tools:text="(4.6)" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="レビュー: "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8ssp"
                            app:layout_constraintEnd_toStartOf="@id/tv_home_count_next_lesson"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="@id/constraintLayout"
                            app:layout_constraintTop_toBottomOf="@id/img_home_score_star" />

                        <TextView
                            android:id="@+id/tv_home_count_next_lesson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8ssp"
                            app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                            app:layout_constraintStart_toEndOf="@id/textView3"
                            app:layout_constraintTop_toBottomOf="@id/img_home_score_star"
                            tools:text="26件" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ll_home_payment_lesson"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/textView5"
                        app:layout_constraintStart_toStartOf="@id/ll_home_next_lesson"
                        app:layout_constraintTop_toBottomOf="@id/textView4">

                        <ImageView
                            android:id="@+id/img_home_payment_lesson"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:background="@drawable/item_no_image"
                            app:displayImage="@{viewModel.mNextLesson}"
                            app:layout_constraintStart_toStartOf="@id/ll_home_payment_lesson"
                            app:layout_constraintTop_toTopOf="@id/ll_home_payment_lesson" />

                        <ImageView
                            android:id="@+id/img_home_like_payment_lesson"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_margin="@dimen/_4sdp"
                            android:background="@drawable/ic_heart_white"
                            app:layout_constraintEnd_toEndOf="@id/img_home_payment_lesson"
                            app:layout_constraintTop_toTopOf="@id/img_home_payment_lesson"
                            app:likeImage="@{viewModel.mNextLesson}" />

                        <TextView
                            android:id="@+id/tv_home_title_payment_lesson"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@{viewModel.mNextLesson.title}"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintEnd_toEndOf="@id/ll_home_payment_lesson"
                            app:layout_constraintStart_toEndOf="@id/img_home_payment_lesson"
                            app:layout_constraintTop_toTopOf="@id/ll_home_payment_lesson"
                            tools:text="Lession Title, Lession Title, Lession Title, Lession Title, Lession Title, Lession Title,Lession Title,Lession Title, Lession Title, Lession Title,Lession Title,Lession Title,Lession Title,Lession Title" />

                        <TextView
                            android:id="@+id/tv_home_category_payment_lesson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="1dp"
                            android:textSize="@dimen/_8ssp"
                            app:category="@{viewModel.mNextLesson}"
                            app:layout_constraintStart_toEndOf="@id/img_home_payment_lesson"
                            app:layout_constraintTop_toBottomOf="@id/tv_home_title_payment_lesson"
                            tools:text="中カテゴリ" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            app:layout_constraintEnd_toEndOf="@id/ll_home_payment_lesson"
                            app:layout_constraintStart_toEndOf="@id/img_home_payment_lesson"
                            app:layout_constraintTop_toBottomOf="@id/tv_home_category_payment_lesson">


                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:background="@drawable/ic_star"
                                app:layout_constraintEnd_toStartOf="@id/tv_home_score_payment_lesson"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toStartOf="@id/linearLayout"
                                app:layout_constraintTop_toTopOf="@id/linearLayout" />

                            <TextView
                                android:id="@+id/tv_home_score_payment_lesson"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                                app:layout_constraintEnd_toStartOf="@id/imageView3"
                                app:layout_constraintHorizontal_weight="1"
                                app:layout_constraintStart_toEndOf="@id/imageView2"
                                app:layout_constraintTop_toTopOf="@id/imageView2"
                                tools:text="3.8" />


                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:background="@drawable/ic_shopping"
                                app:layout_constraintEnd_toStartOf="@id/tv_home_sale_count_payment_lesson"
                                app:layout_constraintStart_toEndOf="@id/tv_home_score_payment_lesson"
                                app:layout_constraintTop_toTopOf="@id/linearLayout" />

                            <TextView
                                android:id="@+id/tv_home_sale_count_payment_lesson"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toBottomOf="@id/imageView3"
                                app:layout_constraintEnd_toStartOf="@id/imageView4"
                                app:layout_constraintHorizontal_weight="1"
                                app:layout_constraintStart_toEndOf="@id/imageView3"
                                app:layout_constraintTop_toTopOf="@id/imageView3"
                                tools:text="312" />


                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:background="@drawable/ic_heart"
                                app:layout_constraintEnd_toStartOf="@id/tv_home_like_count_payment_lesson"
                                app:layout_constraintStart_toEndOf="@id/tv_home_sale_count_payment_lesson"
                                app:layout_constraintTop_toTopOf="@id/linearLayout" />

                            <TextView
                                android:id="@+id/tv_home_like_count_payment_lesson"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toBottomOf="@id/imageView4"
                                app:layout_constraintEnd_toEndOf="@id/linearLayout"
                                app:layout_constraintHorizontal_weight="1"
                                app:layout_constraintStart_toEndOf="@id/imageView4"
                                app:layout_constraintTop_toTopOf="@id/imageView4"
                                tools:text="68" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_55sdp"
                        android:background="@color/light_gray"
                        app:layout_constraintEnd_toStartOf="@id/ll_home_payment_user"
                        app:layout_constraintStart_toEndOf="@id/ll_home_payment_lesson"
                        app:layout_constraintTop_toBottomOf="@id/textView4" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ll_home_payment_user"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:padding="@dimen/_2sdp"
                        app:layout_constraintEnd_toEndOf="@id/ll_home_next_lesson"
                        app:layout_constraintStart_toEndOf="@id/textView5"
                        app:layout_constraintTop_toBottomOf="@id/textView4">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_home_user_payment_lesson"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_user"
                            app:imageUser="@{viewModel.mNextLesson}"
                            app:layout_constraintEnd_toEndOf="@id/tv_home_username_payment_lesson"
                            app:layout_constraintStart_toStartOf="@id/ll_home_payment_user"
                            app:layout_constraintTop_toTopOf="@id/ll_home_payment_user" />

                        <TextView
                            android:id="@+id/tv_home_username_payment_lesson"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="2"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_6ssp"
                            app:infoUser="@{viewModel.mNextLesson}"
                            app:layout_constraintStart_toStartOf="@id/ll_home_payment_user"
                            app:layout_constraintTop_toBottomOf="@id/img_home_user_payment_lesson"
                            tools:text="Teacher's name" />


                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="@dimen/_9sdp"
                            android:layout_height="@dimen/_9sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:background="@drawable/ic_star"
                            app:layout_constraintStart_toEndOf="@id/tv_home_username_payment_lesson"
                            app:layout_constraintTop_toTopOf="@id/ll_home_payment_user" />

                        <TextView
                            android:id="@+id/tv_home_score_user_payment_lesson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_7ssp"
                            app:infoUser="@{viewModel.mNextLesson}"
                            app:layout_constraintStart_toEndOf="@id/imageView5"
                            app:layout_constraintTop_toTopOf="@id/ll_home_payment_user"
                            tools:text="4.5" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="@dimen/_9sdp"
                            android:layout_height="@dimen/_9sdp"
                            android:background="@drawable/ic_shopping"
                            app:layout_constraintStart_toStartOf="@id/imageView5"
                            app:layout_constraintTop_toBottomOf="@id/imageView5" />

                        <TextView
                            android:id="@+id/tv_home_sale_count_user_payment_lesson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_7ssp"
                            app:infoUser="@{viewModel.mNextLesson}"
                            app:layout_constraintStart_toEndOf="@id/imageView6"
                            app:layout_constraintTop_toBottomOf="@id/tv_home_score_user_payment_lesson"
                            tools:text="406" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="@dimen/_9sdp"
                            android:layout_height="@dimen/_9sdp"
                            android:background="@drawable/ic_heart"
                            app:layout_constraintStart_toStartOf="@id/imageView6"
                            app:layout_constraintTop_toBottomOf="@id/imageView6" />

                        <TextView
                            android:id="@+id/tv_home_like_count_user_payment_lesson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_7ssp"
                            app:infoUser="@{viewModel.mNextLesson}"
                            app:layout_constraintStart_toEndOf="@id/imageView7"
                            app:layout_constraintTop_toBottomOf="@id/tv_home_sale_count_user_payment_lesson"
                            tools:text="284" />

                        <LinearLayout
                            android:id="@+id/ll_home_rank_user_payment_lesson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="@id/imageView7"
                            app:layout_constraintTop_toBottomOf="@id/imageView7"
                            app:rankUser="@{viewModel.mNextLesson}">

                            <ImageView
                                android:id="@+id/img_home_rank_user_payment_lesson"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_1sdp"
                                app:rankUser="@{viewModel.mNextLesson}" />

                            <TextView
                                android:id="@+id/tv_home_rank_user_payment_lesson"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:gravity="center"
                                android:textSize="@dimen/_6ssp"
                                app:rankUser="@{viewModel.mNextLesson}"
                                tools:text="PLATINUM" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_home_category_user_payment_lesson"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center|bottom"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8ssp"
                            app:categoryUser="@{viewModel.mNextLesson}"
                            app:layout_constraintTop_toBottomOf="@id/tv_home_username_payment_lesson"
                            tools:text="Middle Category" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    app:layout_constraintTop_toBottomOf="@id/ll_home_next_lesson" />

                <LinearLayout
                    android:id="@+id/ll_home_lesson_menu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:visibilityByCateId="@{cateId}"
                    app:layout_constraintEnd_toStartOf="@id/home_content"
                    app:layout_constraintStart_toStartOf="@id/home_content"
                    app:layout_constraintTop_toBottomOf="@id/textView6">

                    <LinearLayout
                        android:id="@+id/ll_home_lesson_creation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_pull_down_menu_1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="受講者\nメニュー"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_19ssp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:id="@+id/ll_home_lesson_teach"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_pulldown_menu_2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="講師\nメニュー"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_19ssp" />
                    </LinearLayout>
                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/home_content"
                    app:layout_constraintStart_toStartOf="@id/home_content"
                    app:layout_constraintTop_toBottomOf="@id/ll_home_lesson_menu">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/light_gray"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text="新着レッスン"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toStartOf="@id/btn_home_more_new_lesson"
                        app:layout_constraintStart_toStartOf="@id/constraintLayout2"
                        app:layout_constraintTop_toTopOf="@id/constraintLayout2" />

                    <Button
                        android:id="@+id/btn_home_more_new_lesson"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/blue_logo"
                        android:text="@string/see_more"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="@id/constraintLayout2"
                        app:layout_constraintStart_toEndOf="@id/textView7"
                        app:layout_constraintTop_toTopOf="@id/constraintLayout2" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_home_newest_lesson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/textView7"
                        app:lessonList="@{viewModel.mNewestLessons}"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_lesson"
                        tools:orientation="horizontal" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
