<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_lesson"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_item_lesson"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:background="@drawable/item_no_image" />

                <ImageView
                    android:id="@+id/img_item_lesson_like"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignRight="@+id/img_item_lesson"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/ic_heart_white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/tv_item_lesson_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_8ssp"
                        tools:text="3.8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/ic_shopping" />

                    <TextView
                        android:id="@+id/tv_item_lesson_sale_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_8ssp"
                        tools:text="31" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/ic_heart" />

                    <TextView
                        android:id="@+id/tv_item_lesson_like_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_8ssp"
                        tools:text="68" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_lesson_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_1sdp"
                    android:textSize="@dimen/_8ssp"
                    tools:text="中カテゴリ" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_lesson_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10ssp"
            tools:text="Lession Title, Lession Title, Lession Title" />

        <TextView
            android:id="@+id/tv_item_lesson_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:textSize="@dimen/_7ssp"
            tools:text="Detail text, Detail text, Detail text,Detail text, Detail text, Detail text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_lesson_coupon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10ssp"
                tools:text="10%" />

            <TextView
                android:id="@+id/tv_item_lesson_campaign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:background="@color/pink"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10ssp"
                tools:text="10%" />

            <TextView
                android:id="@+id/tv_item_lesson_fee_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_11ssp"
                tools:text="500円/25分" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/ll_item_lesson_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item_lesson_user"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_lesson_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_8ssp"
                tools:text="Teacher's name" />

            <TextView
                android:id="@+id/tv_item_lesson_category_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_8ssp"
                tools:text="Middle Category" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_item_lesson_rank_user"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_12sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_item_lesson_rank_user"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_1sdp" />

                <TextView
                    android:id="@+id/tv_item_lesson_rank_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_1sdp"
                    android:textSize="@dimen/_6ssp"
                    tools:text="ブラック10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_item_lesson_authenticate"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_1sdp"
                    tools:src="@drawable/ic_yes_identification" />

                <TextView
                    android:id="@+id/tv_item_lesson_authenticate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#9E9E9E"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="@dimen/_1sdp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_6ssp"
                    tools:text="本人未確認" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
